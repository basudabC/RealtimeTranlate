{
    "version": 2,
    "builds": [
        {
            "src": "api/translate.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/translate",
            "dest": "api/translate.py"
        },
        {
            "src": "/audio/(.*)",
            "dest": "api/translate.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/",
            "dest": "api/translate.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/translate.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}
